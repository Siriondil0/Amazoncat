
<table class="table" style="color: white;">
  <thead>
	  <tr>
      <td>Chat trop mignon</td>
      <td>Nom du chat trop mignon</td>
	  	<td>Description</td>
      <td>Quantit√© dans le panier</td>
			<td></td>
		</tr>
	</thead>
  <tbody id = "<%=@cart.id%>">
  <%if @content%>
    <% @content.each_with_index do |item, index| %>
	    <tr id='element_<%=item.id%>', remote: true>
        <td><img class="avatar" width="200" height="120" class="card-img-top"  src='<%=item.image_url%>'></td>
		    <td><%= item.title %></td>
		    <td><%= item.description  %></td>
        <td>
        <div class="d-flex flex-row align-items-center justify-content-center">
          <%= link_to " - ", cart_path(@cart, :id_modify => item.id, :increase => false), class: "btn btn-sm btn-success", remote: true,  method: :patch%>
          &nbsp;<%= @cart.quantities[index]%>&nbsp;
          <%= link_to " + ", cart_path(@cart, :id_modify => item.id, :increase => true), class: "btn btn-sm btn-success", remote: true,  method: :patch%>
        </div>
        </td>
			  <td><%= link_to " Delete", cart_path(@cart, :id_delete => item.id), class: "btn btn-sm btn-danger bouton-d far fa-trash-alt", remote: true,  method: :delete, data: { confirm: "Are you sure?" } %></td>
	    </tr>
    <% end %>
  <% end %>
  </tbody>
</table>
<p id="price">Votre total actuel est de <%=@price%> $</p>

<div class="row justify-content-between">
  <div class="col-3" id="checkout">
    <%= link_to "Vider le panier", "/cart/checkout", class: "btn btn-sm btn-info bouton-d far fa-trash-alt", remote: true,  method: :post %>
  </div>
  <div class="col-3">
    <%= link_to "Payer", "/charges/new", class: "btn btn-sm btn-info bouton-d far fa-trash-alt" %>
    </div>
  </div>
</div>
<p>&nbsp;</p>
    